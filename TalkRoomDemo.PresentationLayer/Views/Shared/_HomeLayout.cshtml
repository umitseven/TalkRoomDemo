
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>TalkRoom</title>
    <link rel="stylesheet" href="~/css/home.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
</head>
 
<body>
    <div class="app-container">
        <aside class="servers-bar">
            <!-- Sunucu Listesi -->
            <div class="first-chanel-server">
                <img class="server" src="~/Login/image/Logo.svg" />
                <div class="element"></div>
            </div>
            <div><img id="openModalBtn" class="addRomm" src="~/login\image\AddRoom.svg" title="Oda oluşturma" /></div>
            <div id="serverListContainer">
                <p>Sunucular yükleniyor...</p>
               
            </div>

           

        </aside>
        <aside class="channels-bar">
            <div class="chanel-header">kanal ismi olacak bölüm</div>
            <div style="border-bottom:2px solid #4c5058" class="element"></div>
            <!-- Kanal Listesi -->
            <div class="channel"># genel Sohbet</div>
            <div class="channel"># Sesli Sohbet</div>
            <div id="roomModal" class="modal">
                <div class="modal-content">
                    <div class="cls-h">
                        <span id="closeModalBtn" class="close">&times;</span>
                        <h2>Yeni Oda Oluştur</h2>
                    </div>
                    <div id="roomList">
                    @await Html.PartialAsync("~/Views/AddRoom/AddRoomPartial.cshtml")
                    </div>
                </div>
            </div>
            <div id="copyNotification2" style="
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #4BB543;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.5s, bottom 0.5s;
    font-weight: 600;
    z-index: 1000;
">
                Yeni oda Oluşturuldu!
            </div>
            <div id="roomModal2" class="modal">
                <div class="modal-content">
                    <div class="cls-h">
                        <span id="closeModalBtn2" class="close">&times;</span>
                        <h2>Davet Kodunuz</h2>
                    </div>

                    <!-- Davet Linki girme ve davet kodu oluşturma -->
                    @await Html.PartialAsync("~/Views/FriendRequest/AcceptInvite.cshtml")

                </div>
            </div>
            <div id="copyNotification" style="
    position: fixed;
    top: 20px;
    right: 0%;
    transform: translateX(-50%);
    background-color: #4BB543;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.5s, bottom 0.5s;
    font-weight: 600;
    z-index: 1000;
">
                Kopyalandı!
            </div>

            <!-- Kullanıcı Paneli -->
            <div class="user-panel">
                <div class="user-info">
                    <img src="@User.FindFirst("ImageUrl")?.Value" alt="Profil" class="profile-pic">
                    <div class="user-details">
                        <div class="username">@User.FindFirst("UserName")?.Value</div>
                        <div class="status online"></div>
                    </div>
                </div>
                <div class="user-actions">
                    <button class="icon-btn mic-btn" onclick="toggleVolumePopup()">🎤</button>

                    <div id="volume-popup" class="volume-popup">
                        <label class="volume-label">
                            <input type="checkbox" id="muteCheckbox" />
                            <span>Mute</span>
                        </label>
                        <input type="range" min="0" max="1" step="0.01" value="1" id="volumeSlider" />
                    </div>

                    <a href="Home/Settings" class="icon-btn settings-btn" style="text-decoration: none; margin-right: 5px;">⚙️</a>
                </div>
            </div>

        </aside>

        <main class="chat-area">
            <header class="chat-header">
                @* <button id="openModalBtn" class="add-room-btn">＋ oda oluşturma ikonu resmi vs.</button> *@
                <div class="notification">
                    <img id="alertIcon" src="~/login/image/exclamation.svg"
                         style="width:20px; height:20px; position:fixed; margin-left:20px;"
                         class="add-room-btn alert-icon" />

                    <img id="bellIcon" style="width: 25px;height: 25px; cursor:pointer;" class="add-room-btn" src="~/login/image/bell.svg" />

                        <div id="notificationPanel" class="notification-panel hidden" style="width:350px !important;">

                            <h4>Bildirimler</h4>
                            <div id="notificationBox" class="notification-box">
                            </div>
                        </div>
                   
                </div> @*bu kısım bildirim kutusunun olduğu yer*@
                
            </header>

            <section class="chat-messages">
                @RenderBody() <!-- Sayfa içeriği buraya gelecek -->
                
            </section>

            
        </main>
        <aside class="channels-bar">
            <div class="chanel-header" style="font-size:18px;display:flex; font-weight:600;padding: 10px; margin-top: 1rem; font-size: large;flex-wrap: nowrap;
    align-items: center;
    justify-content: flex-start; ">
                Arkadaş Listesi
                <button id="openModalBtn2" class="add-room-btn">＋</button>
            </div>
            <div style="border-bottom:2px solid #4c5058" class="element"></div>
            <!-- arkadaş listesi -->
            
            <div id="friendListContainer">
                <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.8/signalr.min.js"></script>

                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script>
                    $(document).ready(function () {
                        $("#friendListContainer").load("/Friend/GetFriendPartial");
                    });
                                                     $(document).ready(function () {
                                    console.log("Document ready, loading notifications...");
                                    $("#notificationBox").load("/FriendRequest/GetFriendList", function (response, status, xhr) {
                                        if (status === "error") {
                                            console.error("Hata oluştu:", xhr.status, xhr.statusText);
                                        } else {
                                            console.log("Bildirimler yüklendi.");
                                        }
                                    });
                                });


                </script>

                <script>
                    $(document).ready(function () {
                        $("#serverListContainer").load("/AddRoom/Index");
                    });
                </script>

            </div>
           
        </aside>
    </div>
    <script src="~/js/home.js"></script>
    <script>
        window.serverInviteCode = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(User.FindFirst("FriendCodes")?.Value));
        
    </script>
    @await Component.InvokeAsync("Notyf")

</body>

</html>
