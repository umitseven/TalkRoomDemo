@using TalkRoomDemo.DtoLayer.Dtos
@model List<FriendRequestDto>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="channel" style="padding:5px;">
            <div class="user-info">
                <div class="aas">
                    <img src="@item.SenderProfilePictureUrl" alt="Profil" class="profile-pic" style="width:50px !important;margin-right:10px; height:50px" />
                    <p class="username" style="font-weight: 500; text-decoration: none; color: white; font-size:12px;">@item.SenderUserName adlı kullancı sizinle arkadaş olmak istiyor</p>
                </div>
                <form asp-action="approvedInvite" method="post" style="display:inline;">
                    <input type="hidden" name="requestId" value="@item.Id" />
                    <button type="submit" class="discord-button approve">Y</button>
                </form>

                <form asp-action="RejectInvite" method="post" style="display:inline;">
                    <input type="hidden" name="requestId" value="@item.Id" />
                    <button type="submit" class="discord-button reject">N</button>
                </form>

            </div>
        </div>
    }
}
else
{
    <span style="color:gray;">Hiç bildirim yok</span>
}